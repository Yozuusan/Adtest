{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "build#@adlign/backend": {
      "dependsOn": ["@adlign/types#build", "^build"]
    },
    "build#@adlign/web": {
      "dependsOn": ["@adlign/types#build", "^build"]
    },
    "build#@adlign/worker-mapping": {
      "dependsOn": ["@adlign/types#build", "^build"]
    },
    "build#@adlign/shopify-extension": {
      "dependsOn": ["@adlign/types#build", "^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"]
    }
  }
}
